<h2>Experience</h2>

<% experiences.each do |experience| %>
	<div class="experience">
    <hr />
    <div class="location"><strong><%= experience['location'] %></strong></div>
    <span class="title"><%= experience['title'] %></span>
    <span class="dates"><%= experience['dates'].gsub('-', '&ndash;') %></span>
    <%= markdown experience['description'] %>
  </div>
<% end %>